<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//KO"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="programmers.coffee.domain.order.mapper.ItemMapper">

  <resultMap id="itemResultMap" type="programmers.coffee.domain.order.domain.Item">
    <id property="itemId" column="item_id"/>
    <result property="itemName" column="item_name"/>
    <result property="price" column="price"/>
    <result property="stockCnt" column="stock_cnt"/>
  </resultMap>

  <select id="findById" resultMap="itemResultMap">
    SELECT * FROM item
    WHERE item_id = #{itemId}
  </select>

  <select id="findAll" resultMap="itemResultMap">
    SELECT * FROM item
  </select>

</mapper>
