<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//KO"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="programmers.coffee.domain.order.mapper.ItemMapper">

  <select id="findById" resultType="programmers.coffee.domain.order.domain.Item">
    SELECT * FROM item
    WHERE item_id = #{itemId}
  </select>

  <select id="findAll" resultType="programmers.coffee.domain.order.domain.Item">
    SELECT * FROM item
  </select>

</mapper>
